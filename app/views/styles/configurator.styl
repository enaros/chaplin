.ipad 
	background: url(../images/ipad-mockup.png) no-repeat 50% 50%
	height: 792px
	position: relative

	&:hover
		> .ipad-screen .edit-pic
			opacity: .5

	.ipad-screen
		width: 756px
		height: 564px
		border-radius: 3px
		margin: auto
		top: 114px
		background-size:cover
		background-repeat: no-repeat
		background-position: 50% 50%
		position: relative

		.clearfix
			clear:both

		.fields
			bottom: 0
			position: absolute
			width: 100%
			height: 100px
			background: rgba(0,0,0,.5)
			padding: 15px
			color: #fff
			
			.span4
				text-align: center
			.btn-group
				margin-left: 0
				margin-bottom:5px

				.btn:first-child
					width: 100px

@media (max-width: 979px)
	.ipad 
		background:none

		.ipad-screen
			width: 100%
			border-radius: none
			top: 0

			.fields
				height: 130px